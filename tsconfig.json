{
    "compilerOptions": {
        "lib": ["ES5", "ES6"],
        "target": "ES2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "removeComments": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
